<%- include("templates/header.ejs", {titulo: "Modificar Paciente"}) %>

    <div class="container my-4">
        <h2>Modificar Paciente</h2>
        <p class="text-muted">Editando paciente con ID: <%= paciente._id %></p>
        
        <form action="/api/pacientes/editar" method="POST">
            <input type="hidden" name="id" value="<%= paciente._id %>">

            <div class="mb-3">
                <label for="firstName" class="form-label">Nombre(s)</label>
                <input class="form-control" type="text" name="firstName" id="firstName" value="<%= paciente.firstName %>" required>
            </div>

            <div class="mb-3">
                <label for="lastName" class="form-label">Apellido(s)</label>
                <input class="form-control" type="text" name="lastName" id="lastName" value="<%= paciente.lastName %>" required>
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Teléfono</label>
                <input class="form-control" type="tel" name="phone" id="phone" value="<%= paciente.phone %>">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input class="form-control" type="email" name="email" id="email" value="<%= paciente.email %>">
            </div>

            <button type="submit" class="btn btn-warning">Guardar Cambios</button>
            <a href="/pacientes" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

<%- include("templates/flooter.ejs") %>